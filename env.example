# LeepiAI Interview Recorder Environment Variables
# Copy this file to .env and fill in your values

# Backend API Configuration
REACT_APP_API_BASE_URL=https://leepiaibackend-production.up.railway.app
REACT_APP_API_TIMEOUT=300000

# Development Settings
NODE_ENV=development
REACT_APP_DEV_MODE=true

# Audio Recording Configuration
# Use 16kHz for recording (hardware supported), then downsample to 6kHz during processing
REACT_APP_AUDIO_SAMPLE_RATE=16000
REACT_APP_AUDIO_CHANNELS=1
REACT_APP_AUDIO_THRESHOLD=0.5
REACT_APP_AUDIO_SILENCE=2.0

# SoX Configuration (if any)
SOX_PATH=
SOX_BINARY_PATH=

# Electron Configuration
ELECTRON_IS_DEV=true
ELECTRON_ENABLE_LOGGING=true

# Build Configuration
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true

# Optional: Custom PATH for SoX (if needed)
# PATH_ADDITION=

# Optional: Audio Device Configuration
# AUDIO_INPUT_DEVICE=
# AUDIO_OUTPUT_DEVICE=

# Optional: Recording Settings
# RECORDING_SEGMENT_DURATION=60
# RECORDING_COMPRESS=false

# Optional: Debug Settings
# DEBUG_AUDIO_RECORDING=true
# DEBUG_SOX_DETECTION=true 